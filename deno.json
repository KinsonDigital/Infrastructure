{
    "version": "v15.0.0",
    "tasks": {
        "check": "deno check ./**/*.ts",
        "lint": "deno lint ./**/*.ts",
        "fmt": "deno fmt ./**/*.ts",
        "fmt-check": "deno fmt --check ./**/*.ts",
        "reload-cache": "deno cache ./**/*.ts",
        "create-pr": "deno run -ERN --allow-run https://raw.githubusercontent.com/KinsonDigital/Infrastructure/refs/tags/v15.1.0/dev-tools/feat-pr-creator-tool.ts",
        "gen-release-notes": "deno run -ERN --allow-run https://raw.githubusercontent.com/KinsonDigital/Infrastructure/refs/tags/v15.1.0/dev-tools/release-notes-generator-tool.ts"
    },
    "lint": {
        "exclude": [
            "**/playground.ts"
        ],
        "rules": {
            "exclude": [
                "no-import-prefix"
            ]
        }
    },
    "fmt": {
        "exclude": [
            "**/*.md",
            "**/playground.ts"
        ],
        "useTabs": true,
        "lineWidth": 130,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false
    }
}
