{
    "version": "v15.0.0",
    "tasks": {
        "check": "deno check ./**/*.ts",
        "lint": "deno lint ./**/*.ts",
        "fmt": "deno fmt ./**/*.ts",
        "fmt-check": "deno fmt --check ./**/*.ts",
        "reload-cache": "deno cache ./**/*.ts"
    },
    "lint": {
        "exclude": [
            "**/playground.ts"
        ],
        "rules": {
            "exclude": [
                "no-import-prefix"
            ]
        }
    },
    "fmt": {
        "exclude": [
            "**/*.md",
            "**/playground.ts"
        ],
        "useTabs": true,
        "lineWidth": 130,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false
    }
}
