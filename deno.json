{
    "version": "v14.1.0",
    "tasks": {
        "check": "deno check ./**/*.ts",
        "lint": "deno lint ./**/*.ts",
        "format": "deno fmt ./**/*.ts",
        "format-check": "deno fmt --check ./**/*.ts",
        "reload-cache": "deno cache ./**/*.ts"
    },
    "lint": {
        "include": [
            "cicd/"
        ],
        "exclude": [
            "**/playground.ts"
        ]
    },
    "fmt": {
        "include": [
            "cicd/"
        ],
        "exclude": [
            "**/*.md"
        ],
        "useTabs": true,
        "lineWidth": 130,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false
    },
    "imports": {
        "@std/fs": "jsr:@std/fs@^1.0.4",
        "@std/path": "jsr:@std/path@^1.0.6"
    }
}
