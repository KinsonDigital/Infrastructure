{
    "version": "v15.0.0",
    "tasks": {
        "check": "deno check ./**/*.ts",
        "lint": "deno lint ./**/*.ts",
        "fmt": "deno fmt ./**/*.ts",
        "fmt-check": "deno fmt --check ./**/*.ts",
        "reload-cache": "deno cache ./**/*.ts"
    },
    "lint": {
        "exclude": [
            "**/playground.ts"
        ]
    },
    "fmt": {
        "exclude": [
            "**/*.md",
            "**/playground.ts"
        ],
        "useTabs": true,
        "lineWidth": 130,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false
    },
    "imports": {
        "@std/fs": "jsr:@std/fs@1.0.19",
        "@std/path": "jsr:@std/path@1.0.8",
        "@kd-clients/github": "jsr:@kinsondigital/kd-clients@1.0.0-preview.15/github",
        "@kd-clients/github-models": "jsr:@kinsondigital/kd-clients@1.0.0-preview.15/github/models",
        "@kd-clients/packaging": "jsr:@kinsondigital/kd-clients@1.0.0-preview.15/packaging",
        "@kd-clients/social": "jsr:@kinsondigital/kd-clients@1.0.0-preview.15/social"
    }
}
